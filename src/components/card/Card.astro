---
interface Props {
  hideSpacerLines?: boolean;
  applyToContainer?: string;
}

const { hideSpacerLines = false, applyToContainer }: Props = Astro.props;
---

<div
  class=`border bg-teal-400/10 border-teal-300/10 rounded-lg p-4 my-4 shadow-[0px_0px_189px_-2px_rgba(15,255,207,0.1)] flex flex-col h-full ${applyToContainer}`
>
  <div class=`font-bold ${!hideSpacerLines && 'mb-2 border-b border-teal-500/10 pb-2'}`>
    <slot name="heading" />
  </div>
  <div class=`text-sm ${!hideSpacerLines && 'border-b border-teal-500/10 py-4'}`>
    <slot name="body" />
  </div>
  <div class="text-white mt-auto flex items-end">
    <slot name="footer" />
  </div>
</div>
