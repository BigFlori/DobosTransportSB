---
interface Props {
    image: string
    isBlurred?: boolean
}

const { image, isBlurred = false } = Astro.props as Props;
---

<div 
  class={`flex items-center justify-center h-full bg-fixed bg-cover relative`} 
  style={`background-image: url('${image}')`}
>
  {isBlurred && <div class="absolute inset-0 backdrop-blur-xl"></div>}
  <div class="bg-black/60 flex py-5 w-full h-full relative">
    <slot />
  </div>
</div>
