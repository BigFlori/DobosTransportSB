---
import Clock from "../icons/Clock.astro";
import Phone from "../icons/Phone.astro";
---

<section class="w-full xl:px-5 bg-gray-900 grid xl:grid-cols-3 grid-cols-1">
  <div class="py-5 px-5 flex items-center justify-center space-x-3">
    <div class="flex items-center justify-center p-2 border border-teal-300/10 bg-teal-400/10 rounded-full">
      <Clock className="size-8 stroke-teal-500" />
    </div>
    <span class="uppercase text-lg">
      <span class="font-bold">Autómentés, autómentő</span> - Azonnal indulunk!
    </span>
  </div>
  <div class="py-5 flex items-center justify-center bg-teal-950 xl:-skew-x-[25deg]">
    <a
      href="tel:+36204492158"
      class="!text-gray-300 hover:!text-white text-4xl xl:skew-x-[25deg]"
    >
      +36 20 <span class="font-bold">449 2158</span>
    </a>
  </div>
  <div class="py-5 px-5 flex items-center justify-center space-x-3">
    <div class="flex items-center justify-center p-2 border border-teal-300/10 bg-teal-400/10 rounded-full">
      <Phone className="size-8 stroke-teal-500" />
    </div>
    <span class="uppercase text-lg">
      <span class="font-bold">Elérhető 0-24/7</span> éjjel-nappal!
    </span>
  </div>
</section>
