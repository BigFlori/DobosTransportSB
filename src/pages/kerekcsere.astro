---
import BaseLayout from "../layout/BaseLayout.astro";
import PhoneSpacer from "../sections/PhoneSpacer.astro";
import StripedRow from "../components/striped-row/StripedRow.astro";
import Card from "../components/card/Card.astro";
import LinkButton from "../components/button/LinkButton.astro";
---

<BaseLayout title="Kerékcsere - Dobos Transport" description="Professzionális kerékcsere szolgáltatás">
  <section class="relative w-full min-h-[60vh] flex items-center justify-center">
    <div class="absolute inset-0 w-full h-full">
      <img src="/horizontal.webp" alt="Kerékcsere szolgáltatás" class="w-full h-full object-cover" />
      <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/50 to-black/70"></div>
    </div>

    <div class="relative container mx-auto px-4 py-20">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 uppercase">Kerékcsere</h1>
        <p class="text-xl uppercase">Mobil kerékcsere szolgáltatás 0-24 órában az egész ország területén!</p>
      </div>
    </div>
  </section>

  <PhoneSpacer />

  <section class="relative py-20 overflow-hidden">
    <!-- Lágy fények -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none -z-10">
      <div class="absolute top-0 left-0 w-full md:w-1/2 aspect-square bg-teal-500/20 rounded-full blur-[150px]"></div>
      <div class="absolute bottom-0 right-0 w-full md:w-1/2 aspect-square bg-teal-500/20 rounded-full blur-[150px]">
      </div>
    </div>

    <div class="container mx-auto px-4 relative">
      <div class="max-w-4xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-10">
          <div class="space-y-8">
            <h2 class="text-3xl font-bold text-white uppercase">Professzionális kerékcsere szolgáltatás</h2>
            <div class="space-y-4">
              <p>
                Defekt esetén gyors és szakszerű segítséget nyújtunk a helyszínen. Tapasztalt szakembereink a
                legmodernebb szerszámokkal felszerelve érkeznek, hogy minimális várakozási idővel megoldják a problémát.
              </p>
              <p>Szolgáltatásunk előnyei:</p>
              <ul>
                <StripedRow isFirst tag="li" spacing="small">
                  <span><span class="font-bold text-white">Gyors kiszállás</span> a helyszínre</span>
                </StripedRow>
                <StripedRow tag="li" spacing="small">
                  <span><span class="font-bold text-white">Professzionális szerszámok</span> és felszerelés</span>
                </StripedRow>
                <StripedRow tag="li" spacing="small">
                  <span><span class="font-bold text-white">Szakképzett személyzet</span> minden autótípushoz</span>
                </StripedRow>
              </ul>
            </div>
          </div>
          <div>
            <img src="/vertical.webp" alt="Kerékcsere szolgáltatás" class="w-full h-auto rounded-lg" />
          </div>
        </div>

        <div class="mt-20">
          <h2 class="text-3xl font-bold text-white mb-8 uppercase">Mikor van szükség kerékcsere szolgáltatásra?</h2>
          <div class="grid lg:grid-cols-2 gap-10">
            <div class="space-y-4">
              <ul>
                <StripedRow isFirst tag="li" spacing="small">
                  <span><span class="font-bold text-white">Defekt esetén</span> - azonnali segítség a helyszínen</span>
                </StripedRow>
                <StripedRow tag="li" spacing="small">
                  <span><span class="font-bold text-white">Szezonális kerékcsere</span> - nyári/téli gumik cseréje</span
                  >
                </StripedRow>
                <StripedRow tag="li" spacing="small">
                  <span><span class="font-bold text-white">Kopott vagy sérült gumiabroncs</span> esetén</span>
                </StripedRow>
                <StripedRow tag="li" spacing="small">
                  <span>Biztonsági ellenőrzés során észlelt <span class="font-bold text-white">problémák</span></span>
                </StripedRow>
              </ul>
            </div>
            <div>
              <img src="/horizontal.webp" alt="Kerékcsere szükségessége" class="w-full h-auto rounded-lg" />
            </div>
          </div>
        </div>

        <Card hideSpacerLines applyToContainer="space-y-6 pt-8 mt-10">
          <h2 slot="heading" class="uppercase text-white font-bold text-2xl text-center">Fontos tudnivalók</h2>
          <div slot="body" class="grid lg:grid-cols-2 gap-8">
            <div class="space-y-2">
              <h3 class="text-white text-lg font-bold">Amit biztosítunk:</h3>
              <ul>
                <StripedRow isFirst tag="li" spacing="small">
                  <span><span class="font-bold text-white">Professzionális szerszámok</span> és felszerelés</span>
                </StripedRow>
                <StripedRow tag="li" spacing="small">
                  <span><span class="font-bold text-white">Szakértő személyzet</span> minden típushoz</span>
                </StripedRow>
                <StripedRow tag="li" spacing="small">
                  <span><span class="font-bold text-white">Gyors kiszállás</span> a helyszínre</span>
                </StripedRow>
              </ul>
            </div>
            <div class="space-y-2">
              <h3 class="text-white text-lg font-bold">Amit ellenőrzünk:</h3>
              <ul>
                <StripedRow isFirst tag="li" spacing="small">
                  <span><span class="font-bold text-white">Keréknyomás</span> beállítása</span>
                </StripedRow>
                <StripedRow tag="li" spacing="small">
                  <span><span class="font-bold text-white">Csavarok állapota</span> és meghúzása</span>
                </StripedRow>
                <StripedRow tag="li" spacing="small">
                  <span class="font-bold text-white">Gumik általános állapota</span>
                </StripedRow>
              </ul>
            </div>
          </div>
        </Card>
        
        <Card hideSpacerLines applyToContainer="space-y-5 py-8 mt-10">
          <h2 slot="heading" class="text-xl md:text-2xl text-white text-center uppercase">Kerékcsere szolgáltatás rendelése</h2>
          <p slot="body" class="text-lg text-center">
            Hívjon minket most és szakembereink rövid időn belül a helyszínre érkeznek!
          </p>
          <div slot="footer" class="flex justify-center w-full">
            <LinkButton href="tel:+36204492158">+36 20 449 2158</LinkButton>
          </div>
        </Card>
      </div>
    </div>
  </section>
</BaseLayout>
