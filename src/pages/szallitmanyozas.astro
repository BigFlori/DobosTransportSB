---
import BaseLayout from "../layout/BaseLayout.astro";
import PhoneSpacer from "../sections/PhoneSpacer.astro";
import StripedRow from "../components/striped-row/StripedRow.astro";
import Card from "../components/card/Card.astro";
import LinkButton from "../components/button/LinkButton.astro";
---

<BaseLayout title="Szállítmányozás - Dobos Transport" description="Professzionális szállítmányozási szolgáltatások">
  <section class="relative w-full min-h-[60vh] flex items-center justify-center">
    <div class="absolute inset-0 w-full h-full">
      <img 
        src="/horizontal.webp" 
        alt="Szállítmányozás szolgáltatás" 
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/50 to-black/70"></div>
    </div>

    <div class="relative container mx-auto px-4 py-20">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 uppercase">Szállítmányozás</h1>
        <p class="text-xl uppercase">Szállítmányozás garanciával 0-24 órában az egész ország területén!</p>
      </div>
    </div>
  </section>

  <PhoneSpacer />

  <section class="relative py-20 overflow-hidden">
    <!-- Lágy fények -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none -z-10">
      <div class="absolute top-0 left-0 w-full md:w-1/2 aspect-square bg-teal-500/20 rounded-full blur-[150px]"></div>
      <div class="absolute bottom-0 right-0 w-full md:w-1/2 aspect-square bg-teal-500/20 rounded-full blur-[150px]"></div>
    </div>

    <div class="container mx-auto px-4 relative">
      <div class="max-w-4xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-10">
          <div class="space-y-8">
            <h2 class="text-3xl font-bold text-white uppercase">Szállítmányozási szolgáltatásaink</h2>
            <div class="space-y-4 text-gray-300">
              <p>
                Cégünk több éves tapasztalattal rendelkezik a szállítmányozás területén. Modern járműparkunkkal és szakképzett sofőrjeinkkel garantáljuk a biztonságos és pontos szállítást.
              </p>
              <p>
                Szolgáltatásaink között megtalálható:
              </p>
              <ul>
                <StripedRow isFirst tag="li" spacing="small">
                  <span><span class="font-bold text-white">Belföldi szállítmányozás</span> - az ország egész területén</span>
                </StripedRow>
                <StripedRow tag="li" spacing="small">
                  <span><span class="font-bold text-white">Nemzetközi szállítmányozás</span> - Európa-szerte</span>
                </StripedRow>
                <StripedRow tag="li" spacing="small">
                  <span><span class="font-bold text-white">Express szállítás</span> - sürgős esetekre</span>
                </StripedRow>
                <StripedRow tag="li" spacing="small">
                  <span><span class="font-bold text-white">Túlméretes szállítmányok</span> - speciális rakományok</span>
                </StripedRow>
              </ul>
            </div>
          </div>
          <div>
            <img src="/vertical.webp" alt="Szállítmányozási szolgáltatások" class="w-full h-auto rounded-lg" />
          </div>
        </div>

        <div class="mt-20">
          <h2 class="text-3xl font-bold text-white mb-8 uppercase">Miért válasszon minket?</h2>
          <div class="space-y-4 text-gray-300">
            <ul>
              <StripedRow isFirst tag="li" spacing="medium">
                <span><span class="font-bold text-white">Több éves</span> szakmai tapasztalat</span>
              </StripedRow>
              <StripedRow tag="li" spacing="medium">
                <span><span class="font-bold text-white">Modern járműpark</span> és képzett, megbízható sofőrök</span>
              </StripedRow>
              <StripedRow tag="li" spacing="medium">
                <span><span class="font-bold text-white">Versenyképes árak</span> és rugalmas szolgáltatások</span>
              </StripedRow>
              <StripedRow tag="li" spacing="medium">
                <span><span class="font-bold text-white">24/7 rendelkezésre állás</span> és teljes körű biztosítás</span>
              </StripedRow>
            </ul>
          </div>
        </div>

        <Card hideSpacerLines applyToContainer="space-y-5 py-8 mt-20">
          <h2 slot="heading" class="text-xl md:text-2xl text-white text-center uppercase">Kérjen ajánlatot most!</h2>
          <p slot="body" class="text-lg text-center">
            Szakértő csapatunk készséggel áll rendelkezésére a megfelelő szállítmányozási megoldás kiválasztásában.
          </p>
          <div slot="footer" class="flex justify-center w-full">
            <LinkButton href="tel:+36204492158">+36 20 449 2158</LinkButton>
          </div>
        </Card>
      </div>
    </div>
  </section>
</BaseLayout>