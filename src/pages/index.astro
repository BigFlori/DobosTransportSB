---
import BaseLayout from "../layout/BaseLayout.astro";
import PhoneSpacer from "../sections/PhoneSpacer.astro";
import Services from "../sections/Services.astro";
import RotateTextSpacer from "../sections/RotateTextSpacer.astro";
import TowingDescription from "../sections/TowingDescription.astro";
import LinkButton from "../components/button/LinkButton.astro";
---

<BaseLayout title="Hunor Autómentés" description="Hunor autómentés weboldala.">
  <section class="relative w-full min-h-screen flex items-center justify-center">
    <!-- Háttérkép konténer -->
    <div class="absolute inset-0 w-full h-full">
      <img 
        src="./horizontal.webp" 
        alt="Autómentés és szállítás" 
        class="w-full h-full object-cover"
      />
      <!-- Sötétítő réteg gradienttel -->
      <div class="absolute inset-0 bg-gradient-to-b from-black/80 via-black/50 to-black/80"></div>
    </div>

    <!-- Tartalom konténer -->
    <div class="relative container mx-auto px-4 py-20">
      <div class="max-w-4xl mx-auto text-center space-y-8">
        <!-- Főcím -->
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-white tracking-tight leading-tight">
          <span class="block">Professzionális Autómentés és Szállítás</span>
        </h1>

        <!-- Alcím -->
        <p class="text-xl md:text-2xl text-gray-300 max-w-2xl mx-auto leading-relaxed">
          Megbízható partner az utakon, amikor segítségre van szüksége. 
          Gyors és szakszerű szolgáltatás az év minden napján, 0-24 órában.
        </p>

        <!-- CTA gombok -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mt-8">
          <LinkButton href="tel:+36302508322" transparency="low" applyToContainer="w-full">
            <div class="flex items-center justify-center my-2 mx-4 gap-4">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                />
              </svg>
              <p>Hívjon Most!</p>
            </div>
          </LinkButton>
          <LinkButton href="#services" transparency="low" applyToContainer="w-full">
            <p class="my-2 mx-4">Szolgáltatásaink</p>
          </LinkButton>
        </div>
      </div>
    </div>
  </section>

  <PhoneSpacer />
  <TowingDescription />
  <RotateTextSpacer />
  <Services />
</BaseLayout>

<style>
  .glassmorpishm {
    background-color: rgba(13, 25, 26, 0.1);
    backdrop-filter: blur(4px) saturate(100%);
    -webkit-backdrop-filter: blur(4px) saturate(100%);
    border: 1px solid rgba(38, 234, 237, 0.2);
  }
</style>